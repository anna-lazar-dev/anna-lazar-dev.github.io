/* Ð”Ð¾Ð±Ð°Ð²ÑŒ Ð² style.css */
.animate {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s, transform 0.5s;
}

.animate.show {
    opacity: 1;
    transform: translateY(0);
}

/* Ð¢ÐµÐ¼Ð½Ð°Ñ Ñ‚ÐµÐ¼Ð° */
.dark-theme {
    background: #1a1a1a;
    color: #f0f0f0;
}

.dark-theme header,
.dark-theme .about {
    background: #222;
}

/* ÐœÐ¾Ð±Ð¸Ð»ÑŒÐ½Ð¾Ðµ Ð¼ÐµÐ½ÑŽ */
.burger-menu {
    display: none;
    cursor: pointer;
}

@media (max-width: 768px) {
    .burger-menu {
        display: block;
    }
    
    .mobile-nav {
        display: none;
        position: fixed;
        top: 70px;
        left: 0;
        right: 0;
        background: white;
        padding: 20px;
        box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    }
    
    .mobile-nav.active {
        display: block;
    }
    
    .dark-theme .mobile-nav {
        background: #222;
    }
}

