document.addEventListener('DOMContentLoaded', function() {
    const themeToggle = document.getElementById('theme-toggle');
    const themeIcon = themeToggle?.querySelector('.theme-icon');
    const themeText = themeToggle?.querySelector('.theme-text');
    
    // ÐŸÑ€Ð¾Ð²ÐµÑ€ÑÐµÐ¼ ÑÐ¾Ñ…Ñ€Ð°Ð½Ñ‘Ð½Ð½ÑƒÑŽ Ñ‚ÐµÐ¼Ñƒ Ð¸Ð»Ð¸ ÑÐ¸ÑÑ‚ÐµÐ¼Ð½Ñ‹Ðµ Ð½Ð°ÑÑ‚Ñ€Ð¾Ð¹ÐºÐ¸
    const savedTheme = localStorage.getItem('theme');
    const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    
    // Ð£ÑÑ‚Ð°Ð½Ð°Ð²Ð»Ð¸Ð²Ð°ÐµÐ¼ Ð½Ð°Ñ‡Ð°Ð»ÑŒÐ½ÑƒÑŽ Ñ‚ÐµÐ¼Ñƒ
    if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
        enableDarkTheme();
    }
    
    // ÐžÐ±Ñ€Ð°Ð±Ð¾Ñ‚Ñ‡Ð¸Ðº ÐºÐ»Ð¸ÐºÐ° Ð¿Ð¾ ÐºÐ½Ð¾Ð¿ÐºÐµ
    if (themeToggle) {
        themeToggle.addEventListener('click', toggleTheme);
    }
    
    // Ð¡Ð»ÐµÐ´Ð¸Ð¼ Ð·Ð° Ð¸Ð·Ð¼ÐµÐ½ÐµÐ½Ð¸ÐµÐ¼ ÑÐ¸ÑÑ‚ÐµÐ¼Ð½Ñ‹Ñ… Ð¿Ñ€ÐµÐ´Ð¿Ð¾Ñ‡Ñ‚ÐµÐ½Ð¸Ð¹
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        if (!localStorage.getItem('theme')) {
            if (e.matches) {
                enableDarkTheme();
            } else {
                disableDarkTheme();
            }
        }
    });
    
    function toggleTheme() {
        if (document.body.classList.contains('dark-theme')) {
            disableDarkTheme();
        } else {
            enableDarkTheme();
        }
    }
    
    function enableDarkTheme() {
        document.body.classList.add('dark-theme');
        if (themeIcon) themeIcon.textContent = 'â˜€ï¸';
        if (themeText) themeText.textContent = 'Ð¡Ð²ÐµÑ‚Ð»Ð°Ñ';
        localStorage.setItem('theme', 'dark');
        
        // ÐŸÐ»Ð°Ð²Ð½Ð°Ñ Ð°Ð½Ð¸Ð¼Ð°Ñ†Ð¸Ñ Ð¿ÐµÑ€ÐµÑ…Ð¾Ð´Ð°
        document.body.style.transition = 'background-color 0.3s, color 0.3s';
    }
    
    function disableDarkTheme() {
        document.body.classList.remove('dark-theme');
        if (themeIcon) themeIcon.textContent = 'ðŸŒ™';
        if (themeText) themeText.textContent = 'Ð¢Ñ‘Ð¼Ð½Ð°Ñ';
        localStorage.setItem('theme', 'light');
    }
    
    // Ð”Ð¾Ð±Ð°Ð²Ð»ÑÐµÐ¼ Ð¿Ð»Ð°Ð²Ð½Ñ‹Ðµ Ð¿ÐµÑ€ÐµÑ…Ð¾Ð´Ñ‹ Ð¿Ð¾ÑÐ»Ðµ Ð·Ð°Ð³Ñ€ÑƒÐ·ÐºÐ¸
    setTimeout(() => {
        document.body.style.transition = 'background-color 0.3s, color 0.3s';
        document.querySelectorAll('header, section, footer').forEach(el => {
            el.style.transition = 'background-color 0.3s';
        });
    }, 100);
});